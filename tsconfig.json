{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "antlr/*": [
        "src/antlr/*"
      ]
    },
    "types": [
      "node"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}