{
  "name": "shortscript",
  "version": "1.0.0",
  "description": "Custom interpreted language focused on minimal syntax",
  "directories": {
    "example": "examples",
    "test": "examples"
  },
  "type": "module",
  "scripts": {
    "test:grammar": "NODE_OPTIONS='--no-warnings' tsx bin/runTest.js",
    "test": "npm run test:grammar",
    "build:grammar": "antlr4ts -no-listener -visitor -o src/antlr ShortScript.g4",
    "build": "npm run build:grammar",
    "start": "tsx index.ts"
  },
  "contributors": [
    {
      "name": "Michał Broś",
      "url": "https://github.com/MBrosik"
    },
    {
      "name": "Filip Kowalski",
      "url": "https://github.com/Spookyless"
    },
    {
      "name": "Krzysztof Wrona",
      "url": "https://github.com/rubikon02"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "tsx": "^4.10.2"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.6",
    "@types/node": "^20.12.11",
    "cli-color": "^2.0.4",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}