{
  "name": "shortscript",
  "version": "1.0.0",
  "description": "Custom interpreted language focused on minimal syntax",
  "directories": {
    "example": "examples",
    "example:programs": "examples/programs",
    "test": "examples"
  },
  "type": "module",
  "contributors": [
    {
      "name": "Michał Broś",
      "url": "https://github.com/MBrosik"
    },
    {
      "name": "Filip Kowalski",
      "url": "https://github.com/Spookyless"
    },
    {
      "name": "Krzysztof Wrona",
      "url": "https://github.com/rubikon02"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "assert": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "react-simple-code-editor": "^0.13.1",
    "tsx": "^4.13.2",
    "typescript": "^4.9.5",
    "use-debounce": "^10.0.1",
    "util": "^0.12.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.6",
    "@types/node": "^20.14.2",
    "cli-color": "^2.0.4",
    "nodemon": "^3.1.3"
  },
  "scripts": {
    "start:web": "react-scripts start",
    "build:web": "react-scripts build",
    "test:web": "react-scripts test",
    "eject:web": "react-scripts eject",
    "test:grammar": "tsx bin/runTest.ts",
    "build:grammar": "antlr4ts -no-listener -visitor -o src/ShortScript/antlr ShortScript.g4",
    "build:examples": "tsx bin/buildExamples.ts",
    "start:grammar": "tsx src/ShortScript/index.ts",
    "build": "npm run build:grammar && npm run build:examples && npm run build:web",
    "build:dev": "npm run build:grammar && npm run build:examples",
    "start:dev": "npm run build:dev && npm run start:web"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=20.9.0"
  }
}